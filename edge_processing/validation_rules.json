{
  "battery_temperature": {
    "sensor": "motor_temp_c",
    "unit": "째C",
    "thresholds": {
      "warning": {
        "condition": ">",
        "value": 55,
        "severity": "WARNING",
        "description": "Battery temperature above 55째C"
      },
      "critical": {
        "condition": ">",
        "value": 60,
        "severity": "CRITICAL",
        "description": "Battery temperature above 60째C"
      }
    },
    "rate_of_change": {
      "max_delta": 10,
      "time_window_seconds": 5,
      "severity": "WARNING",
      "description": "Rapid temperature rise greater than 10째C"
    }
  },

  "battery_voltage": {
    "sensor": "battery_voltage_v",
    "unit": "V",
    "thresholds": {
      "warning": {
        "condition": "<",
        "value": 50,
        "severity": "WARNING",
        "description": "Battery voltage below 50V"
      },
      "critical": {
        "condition": "<",
        "value": 48,
        "severity": "CRITICAL",
        "description": "Battery voltage below 48V"
      }
    },
    "rate_of_change": {
      "drop_delta": 5,
      "time_window_seconds": 1,
      "severity": "ERROR",
      "description": "Sudden voltage drop greater than 5V"
    }
  },

  "rpm_speed_correlation": {
    "conditions": {
      "motor_rpm": {
        "condition": ">",
        "value": 0
      },
      "vehicle_speed_kmh": {
        "condition": "==",
        "value": 0
      }
    },
    "severity": "WARNING",
    "description": "Motor RPM greater than zero while vehicle speed is zero"
  },

  "current_soc_correlation": {
    "conditions": {
      "battery_current_a": {
        "condition": ">",
        "value": 0
      },
      "soc_percent": {
        "trend": "increasing"
      }
    },
    "severity": "ERROR",
    "description": "State of charge increasing while battery current indicates discharge"
  }
}
